
// General
*
  box-sizing: border-box

body
  font-size: 62.5%
  font-family: font-title
  height: 100%
  background: #1d1d1d url('../images/bg.jpg') no-repeat center top fixed
  background-size: cover

// Text
h1, h2, h3, h4, h5, h6
  color: color-font
  font-family: font-title
  font-weight: 300
  line-height: base-line-height
  text-transform: uppercase
  text-shadow: 0 1px 1px darken(color-negative , 60%)

h1
  font-size: 3.2em

h2
  font-size: 2.4em

h3
  font-size: 2.1em

h4
  font-size: 1.6em

h1
  margin: 0

p
  font-family: font-default
  font-size: base-font-size
  font-weight: 300
  line-height: base-line-height
  color: color-font
  text-shadow: 0 1px 1px darken(color-negative , 60%)

a
  color: color-link
  transition()
  text-decoration: none
  font-size: base-font-size

ul
  unstyled()

img
  max-width: 100%

hr
  margin: base-line-height 0;
  border: 0;
  border-bottom: 1px dotted white;
  clear: both;
